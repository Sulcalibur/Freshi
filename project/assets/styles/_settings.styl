// ====================================================
//  Jeet Settings
// ====================================================
/**
 * Grid settings.
 * All values are defaults and can therefore be easily overidden.
 */
$jeet-gutter = 3
$jeet-parent-first = false
$jeet-layout-direction = "LTR"
$jeet-max-width = 1410px


// ====================================================
//  Juice Settings
// ====================================================
// Base px
$base-px-default = 16px
$browser-prefixes = false
// Breakpoints
$hdpi-ratio-default = 1.3
$breakpoint-xlarge-default = em-calc(1920)
$breakpoint-large-default = em-calc(1440)
$breakpoint-medium-default = em-calc(1024)
$breakpoint-small-default = em-calc(640)
$breakpoint-xsmall-default = em-calc(480)
$breakpoint-xxsmall-default = em-calc(320)
// Show/Hide
$show-display-default = block
/// Border Radius
$border-radius-default = 5px
// Placeholder Color
$placeholder-color-default = #555555
// Triangle
$triangle-direction-default = right
$triangle-size-default = $base-px-default
$triangle-color-default = #222222
$triangle-element-default = after
// Circle
$circle-size-default = $base-px-default
$circle-color-default = inherit
$circle-border-width-default = null
$circle-border-color-default = #222222
$circle-display-default = inline-block
// Square
$square-size-default = $base-px-default
$square-color-default = black
$square-border-width-default = null
$square-border-color-default = gray
$square-element-default = after
// Position
$position-default = null
// Tint/Shade
$mix-percent-default = 15%
